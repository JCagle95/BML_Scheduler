html
  head
    meta(charset="utf-8")
    title Brain Mapping Lab Meeting Listserv Enroll
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet",href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css")
    link(rel="stylesheet",href="/subscription/css/style.css")

  body
    div.wrapper
      div.inner
        form(action=actionPath, method="POST")
          h3= title
          p.
            #{text}
            <br>
            <br>
            Sincerely,
            <br>
            Jackson Cagle

          if actionPath == "/subscribe"
            label.form-group
              input.form-control(type="text",name="username",required)
              span Your Name
              span.border

          label.form-group
            input.form-control(type="email",name="email",required)
            span Your Email Address
            span.border

          button Submit
            i.zmdi.zmdi-arrow-right
